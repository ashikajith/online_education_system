<%= form_for @institution,url:{action:'update'}, method:'put' do |f| -%>
  <%= hidden_field_tag :id, @institution.id %>
  <%= f.label :name, " Name" %>
  <%= f.text_field :name %>
  <%= f.label :address, "Address" %>
  <%= f.text_field :address %>
  <%= f.label :area, "Area" %>
  <%= f.text_field :area %>
  <%= f.label :city, "City" %>
  <%= f.text_field :city %>
  <%= f.label :state, "State" %>
  <%= f.text_field :state %>
  <%= f.label :country, "Country" %>
  <%= f.text_field :country %>
  <%= f.label :pincode, "Pincode" %>
  <%= f.text_field :pincode %>
  <%= f.label :phone, "Phone" %>
  <%= f.text_field :phone %>
  <%= f.label :email, "Email" %>
  <%= f.text_field :email %>
  <%= f.label :website, "Website" %>
  <%= f.text_field :website %>
  <br>
  <%= f.submit "Update", :disable_with => 'Updating...',class:'btn btn-primary' %>

  <%= link_to "Cancel", portal_institutions_path, class:'btn btn-inverse' %>
<% end %>