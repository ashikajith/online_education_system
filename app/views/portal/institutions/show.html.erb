<table cellpadding="0" cellspacing="0" border="0" class="table table-bordered">
	<thead>
		<th> Field</th>
		<th> Value</th>
	</thead>

	<tbody>	
		<tr>	
			<td>Name</td>
			<td><%= @institution.name %></td>
		</tr>
		<tr>	
			<td>Address</td>
			<td><%= @institution.address %></td>
		</tr>
		<tr>	
			<td>Pincode</td>
			<td><%= @institution.pincode %></td>
		</tr>
		<tr>	
			<td>Area</td>
			<td><%= @institution.area %></td>
		</tr>
		<tr>	
			<td>City</td>
			<td><%= @institution.city %></td>
		</tr>
		<tr>	
			<td>State</td>
			<td><%= @institution.state %></td>
		</tr>
		<tr>	
			<td>Country</td>
			<td><%= @institution.country %></td>
		</tr>
		<tr>	
			<td>Phone</td>
			<td><%= @institution.phone %></td>
		</tr>
		<tr>	
			<td>Email</td>
			<td><%= @institution.email %></td>
		</tr>
		<tr>	
			<td>Website</td>
			<td><%= @institution.website %></td>
		</tr>
	</tbody>
</table>
<% if can? :update, Institution  %>
	<%= link_to "Edit", edit_portal_institution_path(id:@institution.id), class:"btn btn-primary" %>
<% end %>
<% if can? :destroy, Institution %>
	<%= link_to "Delete", portal_institution_path(@institution), method:'delete', class:"btn btn-danger ", data: { confirm: 'Are you sure? Changes cant be reverted!!!'} %>
<% end %>
<br> <br>
<% if can? :read, Institution %>
	<%= link_to "Cancel", portal_institutions_path, class:'btn btn-inverse' %>
<%end%>