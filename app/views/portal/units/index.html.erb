<div>
	<% if can? :create, Unit %>
		<%= link_to "Add New", new_portal_unit_path, class:'btn btn-primary' %>
	<%end%>	
	<table cellpadding="0" cellspacing="0" border="0" class="table table-bordered">
		<thead>
			<th> Name </th>
			<th> Actions </th>
		</thead>

		<tbody>
			<% @units.each do |unit| %>
				<tr>	
					<td> <%= unit.name %>  </td>
					<td>
						<% if can? :read, Unit %>
							<%=  link_to "View", portal_unit_path(id:unit.id) %> |
						<%end%>
						<% if can? :update, Unit %>	
							<%=link_to "Edit", edit_portal_unit_path(id:unit.id) %> |
						<%end%>
						<% if can? :destroy, Unit %>	 
							<%= link_to "Delete", portal_unit_path(unit), method:'delete', data: { confirm: 'Are you sure? Changes cant be reverted!!!'} %>
						<%end%>	
					 </td>
				</tr>
			<%end%>	
		</tbody>
	</table>

	<%= paginate @units %>
</div>