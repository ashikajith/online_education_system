
<%= link_to "New", new_portal_course_path, class:"btn" %>

<table cellpadding="0" cellspacing="0" border="0" class="table table-bordered">
  <thead>
    <th> Course Type </th>
    <th> Country</th>
    <th> State </th>
    <th> Year </th>
    <th> Fees </th>
    <th> Scheme </th>
    <th> Online Status</th>
    <th> Actions </th>
  </thead>

  <tbody>
    <% @courses.each do |c| %>
      <tr>
        <td> <%= c.course_type %> </td>
        <td> <%=c.country %> </td>
        <td> <%= c.state %> </td>
        <td> <%= c.year%> </td>
        <td> <%= c.fees%> </td>
        <td> <%= c.scheme.name%></td>
        <td> <%= c.online_status%> </td>
        <td> <%= link_to "Edit", edit_portal_course_path(c) %>|
        <%= link_to "Delete", portal_course_path(c), method:"delete" %> </td>
      </tr>
    <%end%>

  </tbody>