
  <div class="row workarea has-sidebar"> 
      <%= render 'kb_sidebar' %>
    <div class="span9 content-wrap qa-new-quest">      
      <div class="span9 content padded">
          <ul class="nav nav-tabs" id="kb-tabs">
          <li class="active"><a href="#topic" data-toggle="tab">Choose a topic</a></li>
          <li><span id="selected-topic" style="display:none"><b></b><a href="#">&times;</a></span></li>
          </ul>
          
        <div class="content spinner center xhide" style="display:none">
          <%= image_tag("ajax-small.gif") %>
        </div>
                  
          <div class="tab-content">
            <div class="tab-pane active" id="topic">
              <div class="qa-topics">
                <%= render 'units' %>
              </div>
            </div>
          </div>
          <%= link_to "Cancel", portal_knowledgebase_index_path, class:'btn btn-inverse' %>
      </div>
      
      <%= form_for @knowledgebase, url:{action:'create'}, html:{id:'kb-askq', class:'content span4 event-choice hide'} do |f| -%>
        <%= f.hidden_field :unit_id, value:"" %>
        <%= f.text_field :title, placeholder:"Title of the question" %>
        <%= f.text_area :question, placeholder:'Ask your doubt', class:'span6', size:'8x12', :class=> "tinymce_editor" %>
        <br>
        <%= f.submit "Submit", :disable_with => 'Submiting...', class:"btn btn-primary" %>
        
      <% end %>
                        
    </div>
  </div>
