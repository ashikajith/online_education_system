<% if can? :create, QuestionSet %>
	<%= link_to "Add new", new_portal_question_set_path, class:"btn btn-primary" %>
<%end%>	
<table cellpadding="0" cellspacing="0" border="0" class="table table-bordered">
	<thead>
		<th> Name </th>
		<th> Total </th>
		<th> Actions </th>
	</thead>

	<% @question_sets.each do |q|%>
		<tbody>
			<td> <%= q.name %> </td>
			<td> <%= q.total_question_papers(q) %> </td>
			<td> <%= question_set_action(q).html_safe %> </td>
		</tbody>
	<%end%>

</table>