<div>	
	<% if can? :create, Scheme %>
		<%= link_to "Add New", new_portal_scheme_path, class:'btn btn-primary' %>
	<%end%>

	<table cellpadding="0" cellspacing="0" border="0" class="table table-bordered">
		<thead>
			<th> Name </th>
			<th> Actions </th>
		</thead>

		<tbody>
			<% @schemes.each do |scheme| %>
			<tr>	
				<td> <%= scheme.name %>  </td>
				<td>
					<% if can? :read, Scheme %>	
						<%=  link_to "View", portal_scheme_path(id:scheme.id) %> |
					<%end%>	
					<%if can? :update, Scheme %>	
						<%=link_to "Edit", edit_portal_scheme_path(id:scheme.id) %> |
					<%end%>
					<% if can? :destroy, Scheme %>	 
						<%= link_to "Delete", portal_scheme_path(scheme), method:'delete', data: { confirm: 'Are you sure? Changes cant be reverted!!!'} %>
					<%end%>	
				</td>
			</tr>
		<%end%>	
		</tbody>
	</table>
</div>	