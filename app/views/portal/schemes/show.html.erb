<div>
	<table cellpadding="0" cellspacing="0" border="0" class="table table-bordered">
		<thead>
			<th> Name </th>
			<th> Stream</th>

			
		</thead>

		<tbody>
			<tr>
				<td><%= @scheme.name%></td>
				<td>
					<% @scheme.subjects.each do |subject| %>
						<li><%= subject.name %></li>
					<%end%>		
				</td>
			</tr>		
		</tbody>
	</table>
	<% if can? :update, Scheme %>
		<%= link_to "Edit", edit_portal_scheme_path(id:@scheme.id), class:"btn btn-primary " %> 
	<%end%>
	<%if can? :destroy, Scheme %>
		<%= link_to "Delete", portal_scheme_path(@scheme), method:'delete', class:"btn btn-danger ", data: { confirm: 'Are you sure? Changes cant be reverted!!!'} %>
	<%end%>
	<br> <br>
	<% if can? :read, Scheme %>
		<%= link_to "Back", portal_schemes_path, class:'btn btn-inverse' %>
	<%end%>	
</div>	