<% if can? :create, QuestionTag %>
	<%= link_to "Add New", new_portal_question_tag_path, class:"btn btn-primary" %>
<%end%>	
<br>
<table cellpadding="0" cellspacing="0" border="0" class="table table-bordered">
	<thead>
		<th> Name </th>
		<th> Actions </th>
	</thead>

	<tbody>
		<% @question_tags.each do |question_tag| %>
		<tr>	
			<td> <%= question_tag.name %>  </td>
			<td>
				<% if can? :read, QuestionTag %>
					<%= link_to "View", portal_question_tag_path(id:question_tag.id) %> |
				<%end%>
				<% if can? :update, QuestionTag %>	
					<%=link_to "Edit", edit_portal_question_tag_path(id:question_tag.id) %> |
				<%end%>
				<% if can? :destroy, QuestionTag %>	 
					<%= link_to "Delete", portal_question_tag_path(question_tag), method:'delete' %>
				<%end%> 
			</td>
		</tr>
	<%end%>	
	</tbody>
</table>
