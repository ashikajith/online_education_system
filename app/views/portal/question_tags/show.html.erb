<div>  
  <table cellpadding="0" cellspacing="0" border="0" class="table table-bordered">

  	<thead>
  		<th> Tag Name</th>
  	</thead>

  	<tbody>
  		<tr>
  			<td><%= @question_tag.name%></td>
  		</tr>
  	</tbody>
  </table>
  <% if can? :update, QuestionTag %>
    <%= link_to "Edit", edit_portal_question_tag_path(id:@question_tag.id), class:'btn btn-primary' %> 
  <% end%>
  <% if can? :destroy, QuestionTag %>
    <%= link_to "Delete", portal_question_tag_path(@question_tag), method:'delete', class:'btn btn-danger' %>
  <%end%>  
  <br> <br>
  <% if can? :read, QuestionTag %>
    <%= link_to "Cancel", portal_question_tags_path, class:'btn btn-inverse' %>
  <%end%>
</div>  