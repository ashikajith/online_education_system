<div class="row workarea has-sidebar"> 
    <div class="sidebar span3">
      <ul class="sidebar-menu">
        <li><a href="#" class="active" id="events-today">Today's event</a></li>
        <li><a href="/portal/exam" id="events-prev">Previous events</a></li>
      </ul>
    </div>
    <div class="span9 content-wrap">        
      <div class="content span8">
        <h2>See how well you did today</h2>
        <p class="block-tip">Here you can go through the events you attented once by choosing the event and the subject</p>
      </div>
      <div class="span9 content padded">
        <ul class="nav nav-tabs" id="rq-tabs">
          <li class="active"> <a href="#rq-keys" data-toggle ="tab">Keys</a></li>
          <li> <a href="#rq-answers" data-toggle ="tab">Detailed Answers</a></li>   
        </ul>
        <div class="tab-content">
          <div class="tab-pane active" id="rq-keys">
            <table class="table table-striped table-bordered" id="rq-keytbl">
              <thead>
                <tr>
                  <th> Q No. </th>
                  <th> Answer </th>
                  <th> Level </th>
                </tr>    
              </thead>
              <tbody>
                <% @questions.each_with_index do |q, index| %>
                  <tr>
                    <td> <%= index+1 %> </td>
                    <td> <%= Option.find(q.correct_option.to_s).answer_key %> </td>
                    <td> <%= q.level %></td>
                  </tr>
                <%end%>
              </tbody>  
            </table>
          </div>
          <div class="tab-pane" id="rq-answers">
            <ol class="rq-list">
              <% @questions.each do |qn| %>
                <li>
                  <div class="question"> <%= qn.questions.html_safe %>
                    <div class="answer hide"> 
                      <h5> Solution :</h5>
                      <p> <%= qn.explanation.html_safe %></p>               
                    </div>
                  </div>
                  <div class="right-icons">
                  <a href="#" class="rq-showans"> </a>
                  </div>
                  <br clear="both">
                  <div class="rq-tags">
                    <% qn.question_tags.each do |tags| %>
                      <b><%= tags.name %></b> 
                    <% end %>
                  <br clear="both">
                </li>
              <%end%>
            </ol>
          </div>
        </div>
      </div>      
    </div>
</div>

    